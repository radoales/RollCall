@model EditSchoolClassVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit @Model.Subject.Name class on @Model.ClassStartTime.Date.ToShortDateString()</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClassStartTime" class="control-label"></label>
                <input asp-for="ClassStartTime" class="form-control" />
                <span asp-validation-for="ClassStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassEndTime" class="control-label"></label>
                <input asp-for="ClassEndTime" class="form-control" />
                <span asp-validation-for="ClassEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
