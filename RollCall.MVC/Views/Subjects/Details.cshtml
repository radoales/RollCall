@model RollCall.MVC.Data.Models.Subject

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <td>Date</td>
                <td>Time</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Classes)
            {
                <tr>
                    <td>@x.ClassStartTime.GetDateTimeFormats('D')[0]</td>
                    <td>@x.ClassStartTime.TimeOfDay - @x.ClassEndTime.TimeOfDay</td>
                    <td><a asp-controller="Classes" asp-action="Details" asp-route-id="@x.Id">Go to class</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
