@model PaginatedUserIndexVM

@{
    ViewData["Title"] = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">


    @if (this.User.IsInRole(AdminRole))
    {
        <h1>Users</h1>
        <hr />
        <a class="btn btn-primary" asp-controller="Identity" asp-action="Register">Add new User</a>
        <hr />
    }
    else
    {
        <h1>Students</h1>
    }

</div>
<input asp-for="Name" id="filter-teachers-students" placeholder="type student number or student name" type="text" class="form-control" />
@await Html.PartialAsync("_UsersPartial", Model.Users)